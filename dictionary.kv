ScreenManager:

    LoginWindow:
        name: 'loginwindow'

    MainMenu:
        name: 'mainmenu'

    Lesson:
        name: 'lesson'
        MDFillRoundFlatIconButton:
            on_release: root.current = root.previous()

<LoginWindow>:

    MDCard:
        FitImage:
            source:"data/logo/star_sky.png"
    MDTextField:
        id: login_field
        pos_hint:{"center_x": .5, "center_y": .6}
        fill_color_normal:(0.5, 0.5, 0.5, 0.6)
        hint_text_color_normal: 'black'
        size_hint: 0.8, 0.07
        mode: "round"
        hint_text: "Почта"
        halign: "center"

    PasswordMDTextField:
        id:password_field
        pos_hint:{"center_x": .5, "center_y": .5}
        fill_color_normal:(0.5, 0.5, 0.5, 0.6)
        hint_text_color_normal: 'black'
        size_hint: 0.8, 0.07
        mode: "round"
        hint_text: "Пароль"
        password: True
        icon_right: "eye-off"
        icon_right_color_normal: 'black'


    MDFillRoundFlatIconButton:
        icon_right: True
        icon: 'google'
        size_hint: 0.4, 0.07
        pos_hint:{"center_x": .5, "center_y": .4}
        text: 'Войти c помощью GOOGLE'
        on_press:root.manager.current = 'mainmenu'

    MDFillRoundFlatButton:
        size_hint: 0.4, 0.07
        pos_hint:{"center_x": .5, "center_y": .3}
        text: 'Регистрация'




<ItemDrawer>:
    theme_text_color: "Custom"
    on_press: self.parent.set_color_item(self)

    IconLeftWidget:
        id: icon
        icon: root.icon
        theme_text_color: "Custom"
        text_color: root.text_color


<ContentNavigationDrawer>:
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"

    AnchorLayout:
        anchor_x: "left"
        size_hint_y: None
        height: avatar.height

        Image:
            id: avatar
            size_hint: None, None
            anchor_x: "left"
            source: "data/logo/cat.png"

    MDLabel:
        text: "Мой словарь"
        font_style: "Button"
        adaptive_height: True

    MDLabel:
        text: "pavlig43@gmail.com"
        font_style: "Caption"
        adaptive_height: True

    ScrollView:

        DrawerList:
            id: md_list

    MDRoundFlatIconButton:
        text: "что нибудь"
        font_style: 'Caption'
        text_align: 'center'
        text_color: "#141014"







<MainMenu>

    MDNavigationLayout:

        ScreenManager:
            id: afdaf

            MDScreen:

                MDNavigationLayout:

                    ScreenManager:

                        MDScreen:

                            MDBoxLayout:
                                orientation: 'vertical'

                                MDTopAppBar:
                                    title: "Мой словарь"
                                    elevation: 10
                                    left_action_items: [['menu', lambda x: nav_drawer.set_state("open")]]
                                Button:
                                    text: '2121'
                                    on_press: root.manager.current = 'loginwindow'
                                Widget:


                    MDNavigationDrawer:
                        id: nav_drawer

                        ContentNavigationDrawer:
                            id: content_drawer