<Modules>:
    ScreenManager:
        id: folder_screen_manager

        MDScreen:
            name: 'folder_screen'
            MDBoxLayout:
                size_hint_x: 0.5
                pos_hint: {'center_x':0.5,}
                ScrollView:

                    FolderList:
                        id: folder_list
                        spacing: root.height / 10
            MDIconButton:
                icon: 'folder-multiple-plus'
                text_color: app.theme_cls.text_color
                theme_background_color: 'Custom'
                md_bg_color: app.theme_cls.primary_color
                icon_size: dp(30)
                on_release: root.open_dialog()


<DialogFolder>:
    id: folder_dialog
    orientation: 'vertical'
    spacing: "12dp"
    height: "120dp"
    size_hint_y: None

    MDTextField:
        id: folder_dialog_text




<Eximine>:

    ScreenManager:
        id: eximine_screen_manager

        MDScreen:
            name: 'eximine_screen'

            MDBoxLayout:
                size_hint_x: 0.5
                pos_hint: {'center_x':0.5,}
                ScrollView:
                    id: eximine_list_scroll

            MDIconButton:
                icon: 'folder-multiple-plus'
                text_color: app.theme_cls.text_color
                theme_background_color: 'Custom'
                md_bg_color: app.theme_cls.primary_color
                icon_size: dp(30)
                on_release: root.open_dialog()


<Cards>:
    #md_bg_color: app.theme_cls.primary_color
    MDBoxLayout:
        orientation: 'vertical'
        MDCard:
            size_hint: (0.7,0.5)
            pos_hint: {'center_x':0.5}
            MDLabel:
                id: name_module



        MDCard:
            orientation: 'vertical'
            Button_choice:
                icon: 'file-cog'
                text: 'Изменить модуль'
                #on_release:
            Button_choice:
                icon: 'card-multiple-outline'
                text: 'Повторить карточки'
                #on_release:
            Button_choice:
                icon: 'chair-school'
                text: 'Тестирование'
            Button_choice:
                icon: 'share-variant-outline'
                text: 'Поделиться модулем'
<Button_choice@MDRectangleFlatIconButton>:
    size_hint:(0.5,0.5)
    pos_hint: {'center_x':0.5, 'center_y':0.5}






