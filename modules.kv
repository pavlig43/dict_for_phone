<Modules>:
    MDBoxLayout:
        size_hint_x: 0.5
        pos_hint: {'center_x':0.5,}
        ScrollView:

            FolderList:
                id: folder_list
                spacing: root.height / 10
    MDIconButton:
        icon: 'folder-multiple-plus'
        text_color: app.theme_cls.text_color
        theme_background_color: 'Custom'
        md_bg_color: app.theme_cls.primary_color
        icon_size: dp(30)
        on_release: root.add_folder







<WindowAddFolder>:
    id: add_folder_dialog
    size_hint_x: 0.5
    pos_hint: {'center_x':0.5}
    MDTextField:
        hint_text: 'Название папки'

    MDRaisedButton:
        text: 'Добавить'

